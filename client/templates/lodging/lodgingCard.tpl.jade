.col.l3.m6.s12
  .card.lodging.medium
    .grey-text.text-darken-2
      if hasPhotos
        .card-image(style="max-height=230px")
          a(href="#{provider.url}" target="_blank")
            img.valign.lazy(src="#{getPhoto}")
      .card-content.center
        p #{attr.heading} for $#{price.nightly} a night

    .card-action
      a(href="#{provider.url}" target="_blank") Visit Link
      a.modal-trigger.save-to-trip(href="##{id}", style="float:right; margin-right:0px;") Save to Trip
